<div class="card mb-4">
    <div style="overflow:hidden;">
        {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" class="card-img-top" alt="{{ property.filename }}" style="object-fit:cover; width:360px; height:230px;">
        {% endif %}
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', { slug: property.slug, id: property.id }) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }} m<sup>2</sup> - {{ property.city }} ({{ property.zipCode }})</p>
        <div class="text-primary">
            {{ property.formattedPrice }}
        </div>
    </div>
</div>