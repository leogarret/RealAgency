<mjml>
    <mj-body>
        <mj-section>
            <mj-column>
                <mj-text font-size="40px">Real-Agency.com</mj-text>
                <mj-divider border-color="#F45E43"></mj-divider>
                <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Nouveau message de {{ contact.name }} :</mj-text>
                <mj-text font-size="15px" font-family="helvetica">{{ contact.message }}</mj-text>
                <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Informations sur le contact :</mj-text>
                <mj-text font-size="15px" font-family="helvetica">Nom : {{ contact.name }}</mj-text>
                <mj-text font-size="15px" font-family="helvetica">Email : {{ contact.email }}</mj-text>
                <mj-text font-size="15px" font-family="helvetica">Téléphone : {{ contact.phone }}</mj-text>
            </mj-column>
        </mj-section>
    </mj-body>
